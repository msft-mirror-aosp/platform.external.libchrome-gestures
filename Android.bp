        "src/trace_marker_unittest.cc",
        "src/tracer_unittest.cc",
        "src/unittest_util.cc",
        "src/util_unittest.cc",
        "src/vector_unittest.cc",
    ],
    data: [
        "data/non_linearity_data/testing_non_linearity_data.dat",
    ],
    static_libs: [
        "libchrome-gestures",
        "libgtest",
    ],
    shared_libs: [
        "libjsoncpp",
    ],
    rtti: true,
    cflags: [
