        "src/activity_log_unittest.cc",
        "src/activity_replay.cc",
        "src/activity_replay_unittest.cc",
        "src/box_filter_interpreter_unittest.cc",
        "src/click_wiggle_filter_interpreter_unittest.cc",
        "src/command_line.cc",
